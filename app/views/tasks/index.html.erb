<h2>Welcome to <%= @user.email %>'s page.</h2>

<h2>Tasks</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td><%= task.id %></td>
    <td><a href='<%= task_path(:user_id => @user.id, :id => task.id) %>'><%= task.name %></a></td>
    <td><a href= "<%= edit_task_path(:user_id => @user.id, :id => task.id) %>">Edit a Task</a></td>
    <td><a href= "<%= task_path(:user_id => @user.id, :id => task.id) %>" data-method='delete' data-confirm="Are you sure?">Delete a Task</a></td>
  </tr>
  <% end %>
</table>

<a href="<%= new_task_path %>">Add New Task</a>
<hr>
<a href="/edit_profile">Edit Profile</a>
<a href="<%= users_path(@user.id) %>" data-method='delete' data-confirm="Are you sure?">Delete your account</a>
